{
  "name": "qwik-hono-app",
  "private": true,
  "type": "module",
  "description": "QwikCity frontend + Hono backend on Cloudflare Workers",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:worker": "wrangler dev",
    "dev": "npm-run-all -p dev:frontend dev:worker",

    "build:frontend": "cd frontend && npm run build",
    "build:worker": "vite build",
    "build": "npm run build:frontend && npm run build:worker",

    "deploy": "npm run build && wrangler deploy",

    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"frontend/src/**/*.ts*\"",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.16.0",
    "@builder.io/qwik-city": "^1.16.0",
    "hono": "^4.9.8"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@eslint/js": "latest",
    "@types/bun": "*",
    "@types/node": "20.19.0",
    "eslint": "9.32.0",
    "eslint-plugin-qwik": "^1.16.0",
    "globals": "16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "typescript": "5.4.5",
    "typescript-eslint": "8.38.0",
    "typescript-plugin-css-modules": "latest",
    "undici": "*",
    "vite": "7.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.17.0"
  }
}
